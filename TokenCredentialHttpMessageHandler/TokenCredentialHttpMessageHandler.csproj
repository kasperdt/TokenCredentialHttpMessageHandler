<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<Authors>Kasper Dahl Tangen</Authors>
	<Version>1.0.1</Version>
	<PackageId>TokenCredentialHttpMessageHandler</PackageId>
    <Title>TokenCredentialHttpMessageHandler</Title>
	<Description>An HttpMessageHandler that uses a Azure.Identity.TokenCredential to acquire access tokens and add them to outgoing HTTP requests.</Description>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<PackageProjectUrl>https://github.com/kasperdt/TokenCredentialHttpMessageHandler</PackageProjectUrl>
	<RepositoryUrl>https://github.com/kasperdt/TokenCredentialHttpMessageHandler</RepositoryUrl>
	<RepositoryType>git</RepositoryType>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Identity" Version="1.17.1" />
  </ItemGroup>

</Project>
